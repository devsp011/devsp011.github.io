{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "rules": {
    "space-before-function-paren": "off",
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "jsx-quotes": [
      "error",
      "prefer-double"
    ]
  }
}
